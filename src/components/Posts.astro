---
const { title, content, time, image, tags } = Astro.props; // de donde viene la informaci√≥n

import Tags from '../components/Tags.astro';
---

<section>
	<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
		<div class="max-w-3xl">
			<h2 class="text-3xl font-bold sm:text-4xl">
				{title}
			</h2>
			<span
				class="flex flex-col sm:gap-y-2 md:flex-row md:items-center md:gap-y-0 md:divide-x
        md:divide-textColor"
			>
				<time class="pr-2">{time}</time>
				<Tags tags={tags} />
			</span>
		</div>

		<div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
			<div class="relative h-32 overflow-hidden sm:h-40 lg:h-full">
				<img
					alt={title}
					src={image}
					class="absolute inset-0 h-full w-full object-cover"
				/>
			</div>

			<div class="lg:py-16">
				<article class="space-y-4 text-gray-600">
					<p>{content}</p>
				</article>
			</div>
		</div>
	</div>
</section>
